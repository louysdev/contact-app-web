<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo contacto</h3>
        </div>
        <div class="card-body">
            <form action="/contacts/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" class="form-control" placeholder="Apellido" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="Correo" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="phone" class="form-control" placeholder="Telefono" autofocus>
                </div>
                <div class="from-group">
                    <button class="btn btn-primary btn-block">
                        Crear
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>